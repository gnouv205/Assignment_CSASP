@model ASM_ASPNETCORE.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Are you sure you want to delete this product?</h1>

<div class="card">
    <div class="card-body">
        <form method="post" asp-action="DeleteConfirm" asp-route-maSP="@Model.MA_SANPHAM">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Product Code:</strong> @Model.MA_SANPHAM</p>
                    <p><strong>Product Name:</strong> @Model.TEN_SANPHAM</p>
                    <p><strong>Price:</strong> @Model.GIA_SANPHAM</p>
                    <p><strong>Quantity:</strong> @Model.SOLUONG_SANPHAM</p>
                    <p><strong>Status:</strong> @Model.TINHTRANG_SANPHAM</p>
                </div>
                <div class="col-md-6">
                    <img src="@Model.HINH_SANPHAM" alt="Product Image" style="width: 100px; height: auto;" />
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
