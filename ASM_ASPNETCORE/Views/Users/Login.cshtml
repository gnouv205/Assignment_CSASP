@model ASM_ASPNETCORE.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<div class="container">
    <h1 class="text-center mb-4">Đăng Nhập</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Login" class="p-4 border rounded shadow-sm bg-white">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="EMAIL_NGUOIDUNG" class="control-label"></label>
                    <input asp-for="EMAIL_NGUOIDUNG" class="form-control" placeholder="Nhập email" />
                    <span asp-validation-for="EMAIL_NGUOIDUNG" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MATKHAU_NGUOIDUNG" class="control-label"></label>
                    <input asp-for="MATKHAU_NGUOIDUNG" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="MATKHAU_NGUOIDUNG" class="text-danger"></span>
                    <!-- Hiển thị thông báo lỗi nếu có -->
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="text-danger">@ViewBag.ErrorMessage</div>
                    }
                </div>

                <div class="form-group">
                    <input type="submit" asp-action="Index" asp-controller="Home" value="Đăng Nhập" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <p class="text-center mt-3">
        <a asp-action="Register">Chưa có tài khoản? Đăng ký ngay!</a>
    </p>
</div>


