@model ASM_ASPNETCORE.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<style>
    body {
        background-color: #f8f9fa; /* Light background for contrast */
        height: 100vh; /* Full height to center vertically */
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        margin: 0;
    }

    .container {
        width: 100%;
        max-width: 400px; /* Limit the max width of the form */
        padding: 20px;
        border-radius: 8px; /* Rounded corners */
        background-color: white; /* White background for the form */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    h1 {
        font-size: 1.5rem;
        margin-bottom: 20px; /* Space below the title */
    }

    .btn {
        border-radius: 5px; /* Rounded button */
        padding: 10px; /* Padding inside the button */
    }

    .text-danger {
        font-size: 0.9rem; /* Slightly smaller error messages */
    }
</style>

<div class="container">
    <h1 class="text-center mb-4">Đăng Ký</h1>

    <h4 class="text-center">Người dùng mới</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Register" class="p-4 border rounded shadow-sm bg-white">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="MA_NGUOIDUNG" class="control-label"></label>
                    <input asp-for="MA_NGUOIDUNG" class="form-control" placeholder="Nhập mã người dùng" />
                    <span asp-validation-for="MA_NGUOIDUNG" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EMAIL_NGUOIDUNG" class="control-label"></label>
                    <input asp-for="EMAIL_NGUOIDUNG" class="form-control" placeholder="Nhập email" />
                    <span asp-validation-for="EMAIL_NGUOIDUNG" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MATKHAU_NGUOIDUNG" class="control-label"></label>
                    <input asp-for="MATKHAU_NGUOIDUNG" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="MATKHAU_NGUOIDUNG" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Đăng Ký" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <p class="text-center mt-3">
        <a asp-action="Login">Đã có tài khoản? Đăng nhập ngay!</a>
    </p>
</div>


